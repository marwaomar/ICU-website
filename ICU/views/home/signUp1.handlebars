   <section class="appointment-area area-padding">
         <div class="container">

             <div class="appointment-inner">
                 <div class="row">
                  <div class="col-sm-12 col-lg-5 offset-lg-1">
                     <div class="col-lg-12">
                         <div class="appointment-form">

                             <form action="/signUp1" method="post">
                                      <div class="form-group">
                                     <label>First Name:</label>
                                     <input name="fname" type="text" placeholder="First Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Name'" required>
                                     </div>
                                     <div class="form-group">
                                    <label>Last Name:</label>
                                    <input name="lname" type="text" placeholder="Last Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name'" required>
                                    </div>
                                     <div class="form-group">
                                    <label>Department:</label>
                                    <input name="depart" type="text" placeholder="Your Department" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Department'" required>
                                    </div>
                                    <div class="form-group">
                                   <label>Degree *Optional*:</label>
                                   <input name="degree" type="text" placeholder="Your Degree" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Degree'" Optional>
                                   </div>
                                   <div class="form-group">
                                  <label>ID:</label>
                                  <input  name="id" type="text" placeholder="Your ID" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your ID'" required>
                                  </div>
                                  <div class="form-group">
                                 <label>Address:</label>
                                 <input name="address" type="text" placeholder="Your Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Address'" required>
                                 </div>



                                     <div class="form-group">
                                     <label>Phone Number:</label>
                                     <input name="phone" type="phone number" placeholder="Your Number" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Phone Number'" required>
                                     </div>



                                     <div class="form-group">
                                     <label>Social Security Number:</label>
                                     <input name="ssn" type="text" placeholder="SSN" onfocus="this.placeholder = ''" onblur="this.placeholder = 'SSN'" required>
                                     </div>
                                     <div class="form-group">
                                     <label>Birth Date:</label>
                                     <input name="bd" type="text" placeholder="MM/DD/YYY" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Birthdate'" required>
                                     </div>


                                     <div class="form-group">
                                     <label>Email:</label>
                                     <input name="email" type="email" placeholder="Your Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Email'" required>
                                     </div>


                                     <div class="form-group">
                                     <label>Password:</label>
                                     <input name="password" type="Password" placeholder="Your Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Your Password'" required>
                                     </div>
                                     <div class="form-group">
                                     <label> Confirm Password:</label>
                                     <input name="confirm_password" type="Password" placeholder="Confirm Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Confirm Password'" required>
                                     </div>
                                     <div class="form-group">
                                     <label>Job Position:</label>
                                     <input name="position" type="text" placeholder=" Position" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Position'" required>
                                     </div>

                                     <div class="form-group">
                                     <label>Gender:</label>
                                   <select name="gender" id="Gender"required>
                                     <option name="gender" value="Male">Male</option>
                                     <option name="gender" value="Female">Female</option>

                                   </select>
                                   <br>





                         </div>

                     </div>
                     <div class="">
                       <p> <button class="main_btn">Sign Up</button></p>

                     </div>
                 </div>

                      </form>
             </div>

         </div>

     </section>
